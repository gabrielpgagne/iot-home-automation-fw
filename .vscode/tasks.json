{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "West Build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"windows": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"osx": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"args": [
				"-m",
				"west",
				"build",
				"-p",
				"auto",
				"-b",
				"nucleo_wb55rg",
				"app"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "West Build Current",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"windows": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"osx": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"args": [
				"-m",
				"west",
				"build",
				"-p",
				"auto",
				"-b",
				"nucleo_wb55rg",
				"${fileDirname}/.."
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "West Configurable Build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"windows": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"osx": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"args": [
				"-m",
				"west",
				"build",
				"-p",
				"${input:pristine}",
				"-b",
				"${input:board}",
				"${input:target}"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "West Flash",
			"type": "shell",
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"windows": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"osx": {
				"command": "${workspaceFolder}/.venv/bin/python"
			},
			"args": [
				"-m",
				"west",
				"flash"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	],
	"inputs": [
		{
			"id": "board",
			"type": "promptString",
			"default": "nucleo_wb55rg",
			"description": "See https://docs.zephyrproject.org/latest/boards/index.html"
		},
		{
			"id": "pristine",
			"type": "pickString",
			"description": "Choose when to run a pristine build",
			"default": "auto",
			"options": [
				"auto",
				"always",
				"never"
			]
		},
		{
			"id": "target",
			"type": "pickString",
			"description": "Project to build",
			"default": "app",
			"options": [
				"app",
				"tests/button_test",
				"tests/blinker_test",
			]
		}
	]
}